<% form_for @monologue do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :play_id %><br />
    <%= f.text_field :play_id %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :first_line %><br />
    <%= f.text_field :first_line %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :gender_id %><br />
    <%= f.text_field :gender_id %>
  </p>
  <p>
    <%= f.label :character %><br />
    <%= f.text_field :character %>
  </p>
  <p>
    <%= f.label :style %><br />
    <%= f.text_field :style %>
  </p>
  <p>
    <%= f.label :body_link %><br />
    <%= f.text_field :body_link %>
  </p>
  <p>
    <%= f.label :pdf_link %><br />
    <%= f.text_field :pdf_link %>
  </p>
  <p>
    <%= f.label :intercut %><br />
    <%= f.text_field :intercut %> 1 == true, 0 == false
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>

<% if @monologues.empty? %>
  <p><br/>Alas, no monologues match your search</p>
<% else %>

<!--

  <% if @monologues.size == 1 %>
    <p>Behold! Your monologue.</p>
  <% else %>
    <% if params[:search].nil? or params[:search] == '' %>
      <p>There are <%= @monologues.size.to_s %> monologues</p>
    <% else %>
      <p><%= @monologues.size.to_s %> monologues match your search</p>
    <% end %>
  <% end %>
-->
<%= debug @ajax_search %>

  <div class="paginate"><%= will_paginate @monologues, :page => params[:page], :params => [:controller => 'monologues'] %></div>

  <table style="text-align: left;" cellpadding="5px">
    <tr>
      <th>Play / Character</th>
      <th>First Line</th>
    </tr>
    <% for monologue in @monologues %>
      <tr id="<%= cycle 'odd-row', 'even-row' %>">
        <td nowrap><%=h monologue.character %><span style="font-size: 80%;"> - <%=h monologue.style %> &nbsp; <%= monologue.intercut_label %><br/>



            <a href='<%=h monologue.body_link %>'><%=h monologue.location %></a> &nbsp; <a href="<%=monologue.pdf_link%>"><img alt="print" src="/images/print.gif"/></a></span>
        </td>

        <td style="font-size: 100%;"><%=  link_to h(monologue.first_line), monologue %></td>
          <td> <%= link_to( h(monologue.play.title), play_path(monologue.play) )%><br/></td>

      </tr>
    <% end %>
  </table>
<% end %>


<% if @monologues.empty? %>
  <p><br/>Alas, no monologues match your search</p>
<% else %>

<!--

  <% if @monologues.size == 1 %>
    <p>Behold! Your monologue.</p>
  <% else %>
    <% if params[:search].nil? or params[:search] == '' %>
      <p>There are <%= @monologues.size.to_s %> monologues</p>
    <% else %>
      <p><%= @monologues.size.to_s %> monologues match your search</p>
    <% end %>
  <% end %>
-->
<%= debug @ajax_search %>

  <div class="paginate"><%= will_paginate @monologues, :page => params[:page], :params => [:controller => 'monologues'] %></div>

  <table style="text-align: left; style=font-size: 80%;" cellpadding="1px">
    <tr>
      <th style="font-size: 80%;">Character</th>
      <th style="font-size: 80%;">First Line</th>
      <th style="font-size: 80%;">Act & Sc</th>
      <th style="font-size: 80%;">pdf</th>
    </tr>
    <% for monologue in @monologues %>
      <tr id="<%= cycle 'odd-row', 'even-row' %>">
        <td width="80"><%=h monologue.character %><br><span style="font-size: 60%;"> <%=h monologue.style %> <%= monologue.intercut_label %><br/><%= link_to( h(monologue.play.title), play_path(monologue.play) )%><br/></span>
        </td>

        <td style="font-size: 100%;" valign="top"><%=link_to h(monologue.first_line), monologue %></td>
          <td  valign="top" align="right" width="50"  style="font-size: 70%;"><a href='<%=h monologue.body_link %>'><%=h monologue.location %></a></td>
<td  valign="top" width="20"><a href="<%=monologue.pdf_link%>"><img title="pdf" alt="pdf" valign="middle" src="/images/print.gif" border="0"/></a></td>

      </tr>
    <% end %>
  </table>
<% end %>



<% if @gender %>
  <div>
    <h2><%=h @gender.name %>'s Monologues in Shakespeare</h2>
    <h3><%=h @play.title %></h3>
    <span>
      <% form_tag('javascript:void(0)') do %>
        <b>Search:</b> <input type="text" id="search" size="30" style="font-size: 140%;"/>
        <%= image_tag '/images/ajax-loader.gif',
              :id => 'spinner',
              :style => "display: none;" %>
      <% end %>
      <span style="font-size: 75%;">
        Searching <%= @gender.name %> &nbsp;
        <%= link_to "Search #{@other_gender.name}", play_path(@play, :g => @other_gender.id) %> &nbsp;
        <%= link_to "Search #{@play.title}", play_path(@play) %>
        <%= link_to "Search Complete Works", plays_path  %>
        <br/>
      </span>
    </span>
  </div>
  <%=  observe_field :search,
                    :frequency => 1,
                    :update => 'ajaxResults',
                    :before => "Element.show('spinner')",
                    :complete => "Element.hide('spinner')",
                    :url => {:controller => 'monologues', :action => 'search', :only_path => false},
                    :with => "'g=#{@gender.id}&p=#{@play.id}&search=' + encodeURIComponent(value)" %>
<% else %>
  <div>
  <h2>Monologues in Shakespeare</h2>
  <h3><%=h @play.title %></h3>
    <span>
      <% form_tag('javascript:void(0)') do %>
        <b>Search:</b> <input type="text" id="search" size="30" style="font-size: 140%;"/>
        <%= image_tag '/images/ajax-loader.gif',
              :id => 'spinner',
              :style => "display: none;" %>
      <% end %>
      <span style="font-size: 75%;">
        Searching <%= @play.title %> &nbsp;
        <%= link_to "Search Men", play_path(@play, :g => 3) %> &nbsp;
        <%= link_to "Search Women", play_path(@play, :g => 2) %> &nbsp;
        <%= link_to "Search Complete Works", plays_path  %>
        <br/>
      </span>
    </span>
  </div>
  <%=  observe_field :search,
                    :frequency => 1,
                    :update => 'ajaxResults',
                    :before => "Element.show('spinner')",
                    :complete => "Element.hide('spinner')",
                    :url => {:controller => 'monologues', :action => 'search', :only_path => false},
                    :with => "'p=#{@play.id}&search=' + encodeURIComponent(value)" %>

<% end %>

<div id='ajaxResults'>
  <%= render :controller => 'monologues', :partial => "monologues/search" %>
</div>


